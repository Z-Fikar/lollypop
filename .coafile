[default]
bears = InvalidLinkBear, FilenameBear
files = **.ui, **.py, **.css, **.yml, **.xml, **.md, **.svg
ignore = 

[python]
bears = PEP8Bear
files = **.py

[xml]
bears = XMLBear, LineLengthBear
files = **.xml, **.ui, **.svg
max_line_length = 4000

[markdown]
bears = MarkdownBear, LineLengthBear
files = **.md
max_line_length = 500

[yaml]
bears = YAMLLintBear, LineLengthBear
files = **.yml

[css]
bears = CSSLintBear
files = **.css
